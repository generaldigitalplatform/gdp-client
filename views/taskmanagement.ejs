<% include ./partials/header.ejs %>
<link href="../public/css/gdp-1.0.0/user-management.css" rel="stylesheet">
<script src="../controllers/taskmanagement.js"></script>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">

<div class="container">
  <div class="title">
    <h4 >
      Task Management
      <small></small>
    </h4> 
  </div> 
</div> 
 <div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel-body filterable">
                <table class="table table-hover table-sm table-responsive">
                    <thead>
                        <tr>
                            <th>Task ID</th>
                            <th>Customer Name</th>
                            <th>Mobile Number</th>
                            <th>Task Tytpe</th>
                            <th>Description</th>
                            <th>Time</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Responsibility</th>
                            <th>Edit</th>                            
                        </tr>
                        <tr class="filters">
                            <th><input type="text" class="form-control" placeholder=""></th>
                            <th><input type="text" class="form-control" placeholder=""></th>
                            <th><input type="text" class="form-control" placeholder=""></th>
                            <th><input type="text" class="form-control" placeholder=""></th>
                            <th><input type="text" class="form-control" placeholder=""></th>
                            <th><input type="text" class="form-control" placeholder=""></th>
                            <th><input type="text" class="form-control" placeholder=""></th>
                            <th><input type="text" class="form-control" placeholder=""></th>
                            <th><input type="text" class="form-control" placeholder=""></th>
                            <th><input type="text" class="form-control" placeholder=""></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% tasks.forEach(function(task){ %>
                        <tr>
                            <td><%= task.JobId %></td>
                            <td><%= task.CustomerDetails[0].Name %></td>
                            <td><%= task.CustomerDetails[0].ContactNumber %></td>
                            <td><%= task.JobDetails[0].JobTitle %></td>
                            <td><%= task.JobDetails[0].JobTitle %></td>
                            <td><%= task.JobDetails[0].JobDateTime %></td>
                            <td><%= task.JobDetails[0].JobLocation %></td>
                            <td><%= task.JobDetails[0].JobStatus %></td>
                            <td><%= task.EmployeeDetails[0].Id + "_" + task.EmployeeDetails[0].Name%></td>
                            <td><a href="http://localhost:3001/usermanagement"><span class="glyphicon glyphicon-edit"></span></a> </td>
                        </tr>
                   <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>

<% include ./partials/footer.ejs %>



