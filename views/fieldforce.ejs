<% include ./partials/header.ejs %>
<link href="../public/css/gdp-1.0.0/fieldforce.css" rel="stylesheet">

 <div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h4 class="text-center login-title">Register FieldForce</h4>
            <div class="account-wall">        
                <form class="form-signin" action="/registerfieldforce" method="post">
                <% if (locals.messages) { %>                
                <div class="flash"><%= messages.msg %></div>           
                <% } %>
                <input type="text" class="form-control" name="employeeid" placeholder="EmployeeID" required>
                <input type="text" class="form-control" name="firstname" placeholder="Firstname" required autofocus>
                <input type="text" class="form-control" name="lastname" placeholder="Lastname" required>
                <input type="text" class="form-control" name="primaryphone" placeholder="Primary Phone" required>
                <input type="text" class="form-control" name="secondaryphone" placeholder="Secondary Phone" required>
                <input type="text" class="form-control" name="worklocations" placeholder="Work Locations" required>
                <input type="text" class="form-control" name="workpincodes" placeholder="Locations Pincodes" required>
                <div>
                <button class="btn btn-primary btn-block" type="submit">
                    Register</button>
                </div>                              
                </form>
            </div>
        </div>
    </div>
</div>
<% include ./partials/footer.ejs %>

<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h1 class="text-center">Login</h1>
      </div>
      <div class="modal-body">
          <form class="form col-md-12 center-block">
            <div class="form-group">
              <input type="text" class="form-control input-lg" placeholder="Email">
            </div>
            <div class="form-group">
              <input type="password" class="form-control input-lg" placeholder="Password">
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-lg btn-block">Sign In</button>
              <span class="pull-right"><a href="#">Register</a></span><span><a href="#">Need help?</a></span>
            </div>
          </form>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
          </div>    
      </div>
  </div>
  </div>
</div>